@{
    ViewData["Title"] = "Submit Your Claim";
}

<style>

    .card-header {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        font-weight: 600;
        border: none;
        padding: 1rem 1.5rem;
    }

    .table th {
        background-color: #2c3e50;
        color: white;
        font-weight: 500;
        padding: 1rem;
        border: none;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-color: #eee;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(52, 152, 219, 0.05);
    }

    .badge {
        padding: 8px 12px;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .section-title {
        position: relative;
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 600;
        color: #2c3e50;
    }

        .section-title:before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 24px;
            width: 4px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            border-radius: 2px;
        }

    .btn-primary {
        background: linear-gradient(135deg, #3498db, #2980b9);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2980b9, #2c3e50);
            transform: translateY(-1px);
        }

    .btn-outline-primary {
        color: #3498db;
        border-color: #3498db;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-outline-primary:hover {
            background-color: #3498db;
            border-color: #3498db;
            transform: translateY(-1px);
        }

    .form-text {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
</style>
<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <a class="btn btn-outline-secondary btn-sm me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h2 class="text-dark fw-bold mb-0">Submit Your Claim</h2>
    </div>

    <p class="text-muted mb-4">Fill in your details below and upload any supporting documents.</p>

    <div class="card shadow border-0 mb-5">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>New Claim Form</h5>
        </div>
        <div class="card-body p-4">
            <form class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Name</label>
                    <input type="text" class="form-control" placeholder="Enter your full name" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email address" />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="tel" class="form-control" placeholder="Enter your phone number" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Hours Worked</label>
                    <input type="number" step="0.1" class="form-control" placeholder="Enter total hours worked" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Hourly Rate (R)</label>
                    <input type="number" step="0.01" class="form-control" placeholder="Enter hourly rate (e.g., 200)" />
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Notes</label>
                    <textarea class="form-control" rows="3" placeholder="Add any extra notes..."></textarea>
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Upload Supporting Document</label>
                    <input type="file" accept=".pdf,.docx,.xlsx" class="form-control" />
                    <div class="form-text">Accepted formats: PDF, DOCX, XLSX (Max 5MB)</div>
                </div>

                <div class="col-12 text-end mt-4">
                    <button type="button" class="btn btn-primary px-4">
                        <i class="bi bi-upload me-2"></i> Submit Claim
                    </button>
                </div>
            </form>
        </div>
    </div>


    <h4 class="section-title">Your Submitted Claims</h4>
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Search Claim ID</label>
                    <input type="text" class="form-control" placeholder="Enter Claim ID" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filter by Status</label>
                    <select class="form-select">
                        <option>-- All Statuses --</option>
                        <option>Pending</option>
                        <option>CoordinatorApproved</option>
                        <option>ManagerApproved</option>
                        <option>Rejected</option>
                        <option>Paid</option>
                    </select>
                </div>
                <div class="col-md-4 text-end">
                    <button type="button" class="btn btn-primary mt-3">
                        <i class="bi bi-funnel me-2"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <h4 class="section-title">Claim History</h4>
    <div class="table-responsive mb-4">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-light">
