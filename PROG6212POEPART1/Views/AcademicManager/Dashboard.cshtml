@{
    ViewData["Title"] = "Academic Manger Dashboard";
}
<style>

    .card-header {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        font-weight: 600;
        border: none;
        padding: 1rem 1.5rem;
    }

    .table th {
        background-color: #2c3e50;
        color: white;
        font-weight: 500;
        padding: 1rem;
        border: none;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-color: #eee;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(52, 152, 219, 0.05);
    }

    .badge {
        padding: 8px 12px;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .stats-card {
        border-left: 4px solid #3498db;
        transition: all 0.3s;
    }

        .stats-card:hover {
            border-left: 4px solid #2c3e50;
            transform: translateY(-2px);
        }

    .section-title {
        position: relative;
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: 600;
        color: #2c3e50;
    }

        .section-title:before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 24px;
            width: 4px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            border-radius: 2px;
        }

    .progress {
        height: 8px;
        border-radius: 4px;
        background-color: #e9ecef;
    }

    .progress-bar {
        border-radius: 4px;
    }

    .action-btn {
        border-radius: 20px;
        padding: 6px 15px;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
    }

        .action-btn:hover {
            transform: translateY(-1px);
        }

    .btn-primary {
        background: linear-gradient(135deg, #3498db, #2980b9);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2980b9, #2c3e50);
            transform: translateY(-1px);
        }

    .btn-success {
        background: linear-gradient(135deg, #27ae60, #219653);
        border: none;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        border: none;
    }
</style>
<div class="container mt-4">


    <div class="d-flex align-items-center mb-4">
        <a class="btn btn-outline-secondary btn-sm me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h2 class="text-dark fw-bold mb-0">Academic Manager Dashboard</h2>
    </div>

    <div class="card shadow border-0 mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>Manager Information</h5>
        </div>
        <div class="card-body p-4">
            <form class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Name</label>
                    <input type="text" class="form-control" placeholder="Enter your full name" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email address" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="tel" class="form-control" placeholder="Enter your phone number" />
                </div>

                <div class="col-12 text-end mt-4">
                    <button type="button" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-2"></i> Save Information
                    </button>
                </div>
            </form>
        </div>
    </div>


    <h4 class="section-title">Filter Claims</h4>
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Search Claim ID</label>
                    <input type="text" class="form-control" placeholder="Enter Claim ID" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Search Lecturer ID</label>
                    <input type="text" class="form-control" placeholder="Enter Lecturer ID" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filter by Status</label>
                    <select class="form-select">
                        <option>-- All Statuses --</option>
                        <option>Pending</option>
                        <option>CoordinatorApproved</option>
                        <option>ManagerApproved</option>
                        <option>Rejected</option>
                        <option>Paid</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="button" class="btn btn-primary mt-3">
                        <i class="bi bi-funnel me-2"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>


    <h4 class="section-title">Submitted Claims</h4>
    <div class="table-responsive mb-4">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer ID</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Approval Record</th>
                    <th>Actions</th>
                </tr>
